    "@ts-tools/node": "^1.1.3",
    "@ts-tools/webpack-loader": "^1.1.4",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/html-minifier-terser": "^5.0.0",
    "@types/is-ci": "^2.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "12",
    "@types/puppeteer": "^2.0.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-select": "^3.0.11",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
